<% if @scenes.any? %>
  <% @scenes.each do |scene| %>
    <%= link_to scene.title, scene_path(scene) %>
    <%= link_to "Edit #{scene.title}", edit_scene_path(scene) %>
    <%= link_to "Delete #{scene.title}", scene_path(scene), method: :delete %>
    <%= link_to "Comment", new_scene_comment_path(scene) %>
  <% end %>
<% else %>
  <h1>No scenes yet</h1>
<% end %>

